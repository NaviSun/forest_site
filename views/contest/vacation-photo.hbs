<h2>Конкурс отпускных фотографий</h2>

<form
  action="/contest/vacation-photo-thank-you/{year}/{month}}"
  role="form"
  class="form-horizontal"
  enctype="multipart/form-data"
  method="POST"
>
  <input type="hidden" name="_csrf" id="" value="{{csrf}}" />
  <div class="form-group">
    <label for="fieldName" class="col-sm-2 control-label">Имя</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" name="name" id="fieldName" />
    </div>
  </div>
  <div class="form-group">
    <label for="fieldEmail" class="col-sm-2 control-label">Адресс Электронной
      почты</label>
    <div class="col-sm-4"><input
        type="email"
        class="form-control"
        required
        id="fieldEmail"
        name="email"
      /></div>
  </div>

  <div class="form-group">
    <label for="fieldPhoto" class="col-sm-2 control-label">Фотография из отпуска</label>
    <div class="col-sm-4"><input
        type="file"
        class="form-control"
        required
        accept="imgae/*"
        id="fieldPhoto"
        name="photo"
      /></div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4"><button
        type="submit"
        class="btn btn-primary"
      >Отправить</button></div>
  </div>
</form>

